<html>
    <head>
        <title>
            <%= locals.title %>
        </title>
        <body>
            <h1>Contact List</h1>

            <div>
                <ul>
                    <% for (let i of contact_list) { %>
                        <li>
                            <p><%= i.name %></p>
                            <p><%= i.phone %></p>
                        </li>
                    <% } %>
                </ul>
            </div>
            <form action="/create-contact", method="post" required="true">
                <input type="text", name="name", placeholder="Enter Name", required="true">
                <input type="number", name="phone", placeholder="Enter phone"> 

                <button type="submit"> Add Contact</button>
            </form>
        </body>
    </head>
</html>